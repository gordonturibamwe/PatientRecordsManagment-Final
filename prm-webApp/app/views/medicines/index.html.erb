<p id="notice"><%= notice %></p>

<h1>Listing Medicines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gram</th>
      <th>Prescription</th>
      <th>Refill</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medicines.each do |medicine| %>
      <tr>
        <td><%= medicine.name %></td>
        <td><%= medicine.gram %></td>
        <td><%= medicine.prescription %></td>
        <td><%= medicine.refill %></td>
        <td><%= medicine.summary %></td>
        <td><%#= link_to 'Show', patient_summary_medicine(@patient, @s, medicine) %></td>
        <td><%#= link_to 'Edit', edit_medicine_path(medicine) %></td>
        <td><%#= link_to 'Destroy', medicine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

