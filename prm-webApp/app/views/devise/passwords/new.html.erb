<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form-signin" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, :class => "form-control", :placeholder => "Email", autofocus: true %>
  </div>

  <div class="row">
  <div class="col-md-12">
    <%= f.submit "Send me reset password instructions", :class => "btn btn-primary btn-lg" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
