  <div class="row">
  <div class="col-md-12 text-center"> <h2><small> Resend confirmation instructions </small> </h2>
  </div> </div>
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, :class => "form-signin" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, :class => "form-control", :placeholder => "Email", autofocus: true %>
  </div>
<hr>
  <div class="row">
  <div class="col-md-12">
    <%= f.submit "Resend Info", :class => "btn btn-primary"  %>
<% end %>

<%= render "devise/shared/links" %>
