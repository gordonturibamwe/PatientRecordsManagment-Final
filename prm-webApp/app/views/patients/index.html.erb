        <td><%= patient.dob %> </td>
        <td><%= patient.nextofkin %> </td>
        <td><%= patient.nextofkinphone %> </td>
        <td class="text-right"><%= link_to 'View', patient_path(patient), :class => "btn btn-default btn-xs" %>  

			<!-- Small modal -->
<button type="button" class="btn btn-danger btn-xs" data-toggle="modal" data-target=".bs-example-modal-sm">Delete Patient</button>

