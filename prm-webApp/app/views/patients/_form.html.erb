<%= form_for(@new_patient ) do |f| %>
<% if @new_patient .errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@new_patient .errors.count, "error") %> prohibited this patient from being saved:</h2>

  <ul>
    <% @new_patient .errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row">
  <div class="col-md-6"> <%= f.text_field :firstName, class: "form-control", placeholder: "First Name", autofocus: true %> </div>
  <div class="col-md-6"> <%= f.text_field :lastName, class: "form-control", placeholder: "Last Name" %> </div>
</div>

<div class="row top10">
  <div class="col-md-4"> <%= f.select(:gender, ['Select Gender', 'Male', 'Female'], {}, { class: "form-control" }) %></div>
  <div class="col-md-5"> <%= f.text_field :sickness, class: "form-control", placeholder: "Sickness" %>  </div>
  <div class="col-md-3"> <%= f.date_select :dob, :start_year=>1900, class: "form-control" %> </div>
</div>

<div class="row top10">
  <div class="col-md-12"> <h4> Proxy Information </h4> </div>
  <div class="col-md-6"> <%= f.text_field :proxyName, class: "form-control", placeholder: "Proxy Name" %> </div>
  <div class="col-md-6"> <%= f.text_field :proxyTelephone, class: "form-control", placeholder: "Proxy Telephone" %> </div>
</div>
<hr>
<div class="actions"> <%= f.submit %> </div>
<hr>
</div>
<% end %>
