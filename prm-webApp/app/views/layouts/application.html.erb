<!DOCTYPE html>
<html>
<head>
	<title>Patient Managment System</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<hr>
		<div class="row">
 		 <div class="col-md-6"> <h2>Patient Managment System</h2></div> 
 		 <div class="col-md-6 text-right">
 		 	<% if user_signed_in? %>
		  <%= link_to "Sign out", destroy_user_session_path,:method => :delete, :class => "btn btn-danger" %> 
		  <% end %>
		</div>
	</div>
		<hr>

		<% flash.each do |name, msg| %>
		<%= content_tag :div, msg, class: "alert alert-success" %>
		<% end %>

		<%= yield %>
	</div>

</body>
</html>
